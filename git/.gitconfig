[user]
	email = ortner@tu-berlin.de
	name = philipportner
	signingKey = /Users/philipportner/.ssh/github.pub
[merge]
    tool = nvimdiff4
    prompt = false
	conflictstyle = zdiff3
[mergetool "nvimdiff4"]
    cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[alias]
    lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
    lg3 = log --color --graph --date=format:'%Y-%m-%d %H:%M:%S' --pretty=format:'%h -%d %s (%ad) <%an>'
    lg = !"git lg1"
	fpush = push
[commit]
    verbose = true
	template = /Users/philipportner/.commit_template

[core]
    editor = nvim
[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    features = decorations
    navigate = true

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
[grep]
	lineNumber = true
; [url "https://github.com/"]
;     insteadOf = git://github.com/
[maintenance]
	repo = /Users/philipportner/dotfiles
	repo = /Users/philipportner/Documents/projects/daphne
[rerere]
	enable = true
	autoUpdate = true
[branch]
	sort = -committerdate
[column]
	ui = auto
[gpg]
	format = ssh
[rebase]
    autosquash = true
[diff]
    algorithm = histogram
